<UserControl x:Class="TransDemo.UI.Views.TransfersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="700" d:DesignHeight="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" Width="631" Height="204">

            <!-- Nagłówek -->
            <TextBlock Text="Wykonaj przelew"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,16"
                       HorizontalAlignment="Center"/>

            <!-- FROM / TO -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="230"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Od:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Accounts}"
                          SelectedItem="{Binding SelectedFromAccount}"
                          DisplayMemberPath="AccountNumber"/>

                <Button Grid.Column="2" Content="..." Width="30"
                        Command="{Binding SearchFromAccountCommand}" Margin="4,0"/>

                <TextBlock Grid.Column="3" Text="Do:" VerticalAlignment="Center" Margin="12,0,8,0"/>
                <ComboBox Grid.Column="4"
                          ItemsSource="{Binding Accounts}"
                          SelectedItem="{Binding SelectedToAccount}"
                          DisplayMemberPath="AccountNumber"/>

                <Button Grid.Column="5" Content="..." Width="30"
                        Command="{Binding SearchToAccountCommand}" Margin="4,0"/>
            </Grid>

            <!-- Kwota i opis -->
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Kwota:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" Text="{Binding TransferAmount}" Margin="0,0,12,0"/>

                <TextBlock Grid.Column="2" Text="Opis:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="3" Text="{Binding TransferDescription}" Margin="0,0,19,0"/>
            </Grid>

            <!-- Komunikat błędu -->
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,0,0,12"/>

            <!-- Przyciski -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Wykonaj"
                        Command="{Binding ExecuteTransferCommand}"
                        IsEnabled="{Binding CanExecuteTransfer}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
