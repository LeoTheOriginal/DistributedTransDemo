<UserControl x:Class="TransDemo.UI.Views.TransfersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <StackPanel Margin="10">
        <TextBlock Text="Execute Transfer"
                   FontSize="20" FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <WrapPanel Margin="0,0,0,8">
            <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="200"
                      ItemsSource="{Binding Accounts}"
                      SelectedItem="{Binding SelectedFromAccount}"
                      DisplayMemberPath="AccountNumber"
                      Margin="0,0,20,0"/>
            <TextBlock Text="To:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="200"
                      ItemsSource="{Binding Accounts}"
                      SelectedItem="{Binding SelectedToAccount}"
                      DisplayMemberPath="AccountNumber"
                      Margin="0,0,0,0"/>
        </WrapPanel>

        <WrapPanel Margin="0,0,0,8">
            <TextBlock Text="Amount:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="100"
                     Text="{Binding TransferAmount}"
                     Margin="0,0,20,0"/>
            <TextBlock Text="Description:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="300"
                     Text="{Binding TransferDescription}"
                     Margin="0,0,0,0"/>
        </WrapPanel>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
            <Button Content="Execute"
                    Command="{Binding ExecuteTransferCommand}"
                    IsEnabled="{Binding CanExecuteTransfer}"
                    Margin="0,0,10,0"/>
            <Button Content="Execute with Error"
                    Command="{Binding ExecuteTransferWithErrorCommand}"
                    IsEnabled="{Binding CanExecuteTransfer}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
