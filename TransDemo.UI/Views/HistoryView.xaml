<UserControl x:Class="TransDemo.UI.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <TextBlock Text="Transaction History" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <DataGrid ItemsSource="{Binding Transactions}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TransactionId}" Width="Auto"/>
                <DataGridTextColumn Header="Account" Binding="{Binding AccountNumber}" Width="*"/>
                <DataGridTextColumn Header="Date" Binding="{Binding CreatedAt}" Width="Auto"/>
                <DataGridTextColumn Header="Type" Binding="{Binding TransactionType}" Width="Auto"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="Auto"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
